---
// Header.astro
import { Image } from "astro:assets";
import logo from "/src/assets/img/LOGO-ISOTIPO-MUNI-BLANCO-2.svg";
---

<header class="bg-green-600 sticky top-0 w-full z-50">
  <div class="container mx-auto px-4 py-2 flex justify-between items-center">
    <a href="https://www.iguazu.gob.ar" class="flex-shrink-0">
      <Image
        src={logo}
        alt="Logo Municipalidad de Puerto Iguazú"
        width={200}
        height={60}
      />
    </a>
    <nav class="hidden lg:block">
      <ul class="flex space-x-6 text-white">
        <li class="group relative">
          <a href="#" class="hover:underline">La Ciudad</a>

          <ul
            class="absolute hidden group-hover:block bg-white text-green-600 mt-2 py-2 w-48 rounded-md shadow-lg"
          >
            <li>
              <a href="/intendente" class="block px-4 py-2 hover:bg-green-100"
                >El Intendente</a
              >
            </li>
            <li>
              <a
                href="/secretaria-de-gobierno"
                class="block px-4 py-2 hover:bg-green-100"
                >Secretaría de Gobierno</a
              >
            </li>
            <li>
              <a href="/historia" class="block px-4 py-2 hover:bg-green-100"
                >Reseña Histórica</a
              >
            </li>
            <li>
              <a
                href="https://historiadeiguazu.org/"
                class="block px-4 py-2 hover:bg-green-100"
                >Dirección de Patrimonio Histórico</a
              >
            </li>
          </ul>
        </li>
        <li class="group relative">
          <a href="#" class="hover:underline">La Municipalidad</a>
          <ul
            class="absolute hidden group-hover:block bg-white text-green-600 mt-2 py-2 w-48 rounded-md shadow-lg"
          >
            <li>
              <a
                href="https://visitiguazu.travel"
                class="block px-4 py-2 hover:bg-green-100">Turismo</a
              >
            </li>
            <li>
              <a href="/cultura" class="block px-4 py-2 hover:bg-green-100"
                >Cultura</a
              >
            </li>
            <li>
              <a href="/deportes-2" class="block px-4 py-2 hover:bg-green-100"
                >Deportes</a
              >
            </li>
            <!-- Añade más elementos del submenú aquí -->
          </ul>
        </li>
        <li class="group relative">
          <a href="#" class="hover:underline">Trámites</a>
          <ul
            class="absolute hidden group-hover:block bg-white text-green-600 mt-2 py-2 w-48 rounded-md shadow-lg"
          >
            <li>
              <a
                href="/tramites-de-transito"
                class="block px-4 py-2 hover:bg-green-100"
                >Trámites de tránsito</a
              >
            </li>
            <li>
              <a
                href="/tramites-de-bromatologia"
                class="block px-4 py-2 hover:bg-green-100"
                >Trámites de bromatología</a
              >
            </li>
            <!-- Añade más elementos del submenú aquí -->
          </ul>
        </li>
        <li><a href="/webmail" class="hover:underline">Webmail</a></li>
        <li><a href="/contacto" class="hover:underline">Contacto</a></li>
      </ul>
    </nav>
    <button class="lg:hidden text-white" id="mobileMenuToggle">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>
  <div id="mobileMenu" class="hidden lg:hidden bg-green-600 text-white">
    <!-- Contenido del menú móvil -->
  </div>
</header>

<script>
  const mobileMenuToggle = document.getElementById("mobileMenuToggle");
  const mobileMenu = document.getElementById("mobileMenu");

  mobileMenuToggle.addEventListener("click", () => {
    mobileMenu.classList.toggle("hidden");
  });
</script>

